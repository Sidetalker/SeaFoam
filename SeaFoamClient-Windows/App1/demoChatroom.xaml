<Page
    x:Class="App1.demoChatroom"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:App1"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <TextBlock x:Name="title" HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" Text="Demo Chatroom" VerticalAlignment="Top" FontSize="69" Width="1346"/>
        <TextBox x:Name="InputText" HorizontalAlignment="Left" Height="55" Margin="81,658,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="1175"/>
        <Button Content="Send" HorizontalAlignment="Left" Height="55" Margin="1258,655,0,0" VerticalAlignment="Top" Width="101" Click="Button_Click"/>


        <ScrollViewer HorizontalAlignment="Left" Height="409" Margin="61,215,0,0" VerticalAlignment="Top" Width="1295">
            <TextBlock x:Name="outputText" HorizontalAlignment="Left" Height="409" TextWrapping="Wrap" VerticalAlignment="Top" Width="1251" FontSize="22" TextAlignment="Right"/>
        </ScrollViewer>

    </Grid>
</Page>
