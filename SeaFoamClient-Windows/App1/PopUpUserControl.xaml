<UserControl
    x:Class="App1.PopUpUserControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:App1"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <Grid Background="#FF9C72FF" Margin="0,0,-84,10">
        <TextBlock HorizontalAlignment="Left" Margin="0,15,0,253" TextWrapping="Wrap" Text="username" Width="484" FontSize="14" TextAlignment="Center"/>
        <TextBox x:Name="tbx1" Margin="67,37,84,221"/>
        <TextBlock HorizontalAlignment="Left" Margin="0,74,0,195" TextWrapping="Wrap" Text="password" Width="484" FontSize="14" TextAlignment="Center"/>
        <PasswordBox x:Name="pbx1" HorizontalAlignment="Left" Margin="67,95,0,162" Width="333" RenderTransformOrigin="0.648,0.815"/>
        <Button x:Name="btnOK" Content="OK" Click="btnOK_Click" Width="87" Margin="316,159,0,93" Height="38"/>
        <Button x:Name="btnCancel" Content="Cancel" Click="btnCancel_Click" Width="81" Margin="64,159,0,93" Height="38"/>
    </Grid>
</UserControl>
